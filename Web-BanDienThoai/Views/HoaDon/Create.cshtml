@using System.Collections;
@using Web.Persistances;
@using Web_BanDienThoai.Controllers;
@using Web.Services.implementation;
@using Web.Services;
@using Web.Entities;
@using Web_BanDienThoai.Models.HoaDon;
@model CreateHoaDonViewModel;

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="HoaDon" asp-action="Index">Danh Sách Hóa Đơn</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Hóa Đơn</li>
        </ol>
    </nav>

    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Id_HoaDon" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Id_HoaDon" class="form-control" />
                    <span asp-validation-for="Id_HoaDon" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="NgayLapHoaDon" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="NgayLapHoaDon" class="form-control" />
                    <span asp-validation-for="NgayLapHoaDon" class="text-danger"></span>
                </div>

                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Id_NhanVien" class="form-label">Nhân viên</label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_NhanVien" class="form-control" asp-items="@Model.Staffs">
                        <option value=""> Chọn nhân viên </option>
                    </select>
                    <span asp-validation-for="Id_NhanVien" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Id_khachhang" class="form-label">Khách hàng</label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_khachhang" class="form-control" asp-items="@Model.Users">
                        <option value=""> Chọn khách hàng </option>
                    </select>
                    <span asp-validation-for="Id_khachhang" class="text-danger"></span>
                </div>

               @* <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Id_NhanVien" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_NhanVien" class="form-control" asp-items="@Model.NhanVien">
                        <option value=""> Chọn nhân viên </option>
                    </select>
                    <span asp-validation-for="Id_NhanVien" class="text-danger"></span>
                </div>*@
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="TongTien" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="TongTien" class="form-control" />
                    <span asp-validation-for="TongTien" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

