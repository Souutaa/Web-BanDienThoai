@using Web_BanDienThoai.Models.HoaDon;
@model DetailHoaDonViewModel

<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Detail" asp-action="Index">Chi Tiết Hóa Đơn</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi Tiết Hóa Đơn</li>
            </ol>
        </nav>
        <div class="wrap d-flex justify-content-start justify-content-sm-start flex-wrap">
            @*<img src="@Url.Content(Model.ImageUrl)" class="rounded-circle shadow-lg" style="width:300px; height:350px" />*@
            <div class="wrap align-items-center ml-5">
                <p class="font-weight-bold text-success" style="font-size:20px">@Model.Id_HoaDon</p>
                <p class="font-weight-normal"> <b>Ngày lập hóa đơn:</b> @Model.NgayLapHoaDon.ToString("dd/MM/yyyy")</p>
                <p class="font-weight-normal"> <b>Mã khách hàng:</b> @Model.Id_khachhang</p>
                <p class="font-weight-normal"> <b>Mã nhân viên:</b> @Model.Id_NhanVien</p>
                <p class="font-weight-normal">Tổng tiền: <a href="#">@Model.TongTien</a></p>
               @* <p class="font-weight-normal">Phone: <a href="tel:@Model.Phone">@Model.Phone</a></p>
                <br /><br />*@
                @*<p class="font-weight-bold"> Pay & Deductions</p>
                <hr style="background-color:crimson" />
                <p class="font-weight-normal"> Payment Method: @Model.PaymentMethod</p>
                <p class="font-weight-normal"> Student Loan: @Model.StudentLoan</p>
                <p class="font-weight-normal"> Union Member: @Model.UnionMember</p>
                <p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i> <a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your paylip.">Send Payslip</a></p>
                <br /><br />*@
                
                @*<hr style="background-color:crimson" />*@
               @* <p class="font-weight-normal"> @Model.Address</p>*@
                @* <p class="font-weight-normal"> @Model.City</p>
                <p class="font-weight-normal"> @Model.Postcode</p>*@
                <br />
                <br />
                <div class="wrap d-flex justify-content-end flex-wrap">
                <table class="table table-strip table-dark">
                    <thead>
                        <tr>
                            <th>Mã danh mục con</th>
                            <th>Tên danh mục con</th>
                            <th>Mã cấu hình</th>
                            <th class="text-warning">Action</th>
                        </tr>
                    </thead>
                    <tbody>                       
                        @foreach (var item in Model.sanpham)
                        {
                            <tr>
                                <td>@item.Id_SanPham</td>
                                    <td>@item.Ten_SanPham</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.GiaTien</td>
                                    <td>@item.LoaiSanPham</td>
                                    @*<td>@item.TenDanhMuc</td>
                                <td>@item.Id_CauHinh</td>
                                <td>
                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id_DanhMucCon">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Id_DanhMucCon">
                                        <i class="fas fa-bars"></i> Detail
                                    </a>
                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id_DanhMucCon">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </a>
                                </td>*@

                            </tr>
                        }
                            
                        </tbody>
                </table>
                </div>

                <div class="form-group">
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>