@using Web_BanDienThoai.Models.LoaiSanPham;
@model IEnumerable<IndexLoaiSanPhamViewModel>

<div class="row">
    <div class="col-md-12 table-responsive-md">
        <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create">Tạo Danh Mục Con</a>
        <table class="table table-strip table-dark">
            <thead>
                <tr>
                    <th>Mã Loại Sản Phẩm</th>
                    <th>Tên Loại Sản Phẩm</th>
                    <th>Mã Danh Mục Con</th>
                    <th>Mã Màu Sắc</th>
                    <th class="text-warning">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id_loai</td>
                        <td>@item.TenLoai</td>
                        <td>@item.Id_DanhMucCon</td>                        
                        <td>@item.Id_MauSac</td>
                        <td>
                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id_loai">
                    <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Id_loai">
                    <i class="fas fa-bars"></i> Detail
                    </a>
                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id_loai">
                    <i class="far fa-trash-alt"></i> Delete
                    </a>
                    </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>