@using System.Collections;
@using Web.Persistances;
@using Web_BanDienThoai.Controllers;
@using Web_BanDienThoai.Models.DanhMucCon;
@using Web_BanDienThoai.Models.CauHinh;
@using Web.Services.implementation;
@using Web.Services;
@using Web.Entities;
@using Web_BanDienThoai.Models.LoaiSanPham;
@model EditLoaiSanPhamViewModel;

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="LoaiSanPham" asp-action="Index">Danh Sách Loại Sản Phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh Sửa Loại Sản Phẩm</li>
        </ol>
    </nav>

    <form method="post" asp-action="Edit" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_loai" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.Id_loai" class="form-control" readonly/>
                    <span asp-validation-for="@Model.Id_loai" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.TenLoai" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.TenLoai" class="form-control" readonly />
                    <span asp-validation-for="@Model.TenLoai" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_DanhMucCon" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="@Model.Id_DanhMucCon" asp-items="@Model.DanhMucCon" class="form-control">
                        <option val="" selected>--Select--</option>
                    </select>
                    <span asp-validation-for="@Model.Id_DanhMucCon" class="text-danger"></span>
                </div>
                <div class="col-3 form-group">
                    <a class="btn btn-rounded btn-primary form-label " asp-controller="DanhMucCon" asp-action="Create"> <i class="fas fa-plus-square" style="margin-right:0.7em"></i>Thêm loại Sản Phẩm</a>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_MauSac" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="@Model.Id_MauSac" asp-items="@Model.MauSac" class="form-control">
                        <option val="" selected>--Select--</option>
                    </select>
                    <span asp-validation-for="@Model.Id_MauSac" class="text-danger"></span>
                </div>
                <div class="col-3 form-group">
                    <a class="btn btn-rounded btn-primary form-label" asp-controller="MauSac" asp-action="Create"> <i class="fas fa-plus-square" style="margin-right:0.7em"></i>Thêm loại Sản Phẩm</a>
                </div>
            </div>
        </div>

        <div class="form-group" style=" margin-top:0.5cm">
            <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Update</button>
            <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            <br />
            <br />
            <br />
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


