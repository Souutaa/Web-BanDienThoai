@{ViewData["Title"] = "Xóa Sản Phẩm";}

@using Web_BanDienThoai.Models.SanPham;
@model DeleteSanPhamViewModel

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="SanPham" asp-action="Index">Danh Sách Sản Phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">Xóa Sản Phẩm</li>
        </ol>
    </nav>
    <form method="post" asp-action="Delete" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_SanPham" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.Id_NhanVien" class="form-control" />
                    <span asp-validation-for="@Model.Id_NhanVien" class="text-danger"></span>
                    <div class="text-danger">@ViewBag.Error</div>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.Ten_SanPham" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.FullName" class="form-control" />
                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                </div>
            </div>
        </div>
            <div class="form-group">
                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Delete</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}