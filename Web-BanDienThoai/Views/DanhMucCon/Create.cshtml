@using Web_BanDienThoai.Models.DanhMucCon;
@using Web_BanDienThoai.Models.CauHinh;
@using Web.Services;
@using Web.Entities;
@model CreateDanhMucConViewModel;
<div class="row">
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_DanhMucCon" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.Id_DanhMucCon" class="form-control" />
                    <span asp-validation-for="@Model.Id_DanhMucCon" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.TenDanhMuc" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.TenDanhMuc" class="form-control" />
                    <span asp-validation-for="@Model.TenDanhMuc" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_CauHinh" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="@Model.Id_CauHinh" class="form-control"> 
                        <option val"" selected>--Select--</option>  
                       @* @foreach(ICauHinhServices)
                        {
                        <option val="@SelectListItem">@item.title</option>}*@
                        @IndexCauHinhViewModel.
                    </select>
                    <span asp-validation-for="@Model.Id_CauHinh" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


