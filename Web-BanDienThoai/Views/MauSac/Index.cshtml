@using Web_BanDienThoai.Models.MauSac;
@model IEnumerable<IndexMauSacViewModel>

<div class="row">
    <div class="col-md-12 table-responsive-md">
        <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create">Tạo Màu Sắc</a>

        <div class="col-xs-12">
            <form moethod="get" asp-action="Index" enctype="multipart/form-data">
                <div class="col-md-2">
                    <input type="text" name="valueOfSearch" class="form-control" style="margin-bottom:0.1cm" placeholder="Nhập nội dung cần tìm" />
                </div>
                <div class="col-xs-2">
                    <button type="submit" class="btn btn-success" style="margin-bottom:0.5cm">Tìm Kiếm</button>
                </div>
            </form>
        </div>

        <table class="table table-strip table-dark">
            <thead>
                <tr>
                    <th>Mã Màu</th>
                    <th>Tên Màu</th>
                    <th class="text-warning">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                    {
                <tr>
                    
                        <td>@item.Id_MauSac</td>
                        <td>@item.TenMauSac</td>
                        <td>
                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id_MauSac">
                    <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Id_MauSac">
                    <i class="fas fa-bars"></i> Detail
                    </a>
                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id_MauSac">
                    <i class="far fa-trash-alt"></i> Delete
                    </a>
                    </td>
                    
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>