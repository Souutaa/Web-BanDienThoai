@using Web_BanDienThoai.Models.MauSac;
@model CreateMauSacViewModel

<div class="row">
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="@Model.Id_MauSac" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.Id_MauSac" class="form-control" />
                    <span asp-validation-for="@Model.Id_MauSac" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="@Model.TenMauSac" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="@Model.TenMauSac" class="form-control" />
                    <span asp-validation-for="@Model.TenMauSac" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

