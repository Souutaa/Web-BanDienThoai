@using Web_BanDienThoai.Models.NhaCungCap;
@model CreateNhaCungCapViewModel

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="NhaCungCap" asp-action="Index">Danh Sách Nhà Cung Cấp</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Nhà Cung Cấp</li>
        </ol>
    </nav>

    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Id_NhaCungCap" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Id_NhaCungCap" class="form-control" placeholder="Nhập mã nhà cung cấp NCC__"/>
                    <span asp-validation-for="Id_NhaCungCap" class=" text-danger"></span>
                    <div class="text-danger">@ViewBag.Error</div>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Name" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên nhà cung cấp"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Email" class="form-control" placeholder="Nhập email nhà cung cấp"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Address" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ nhà cung cấp"/>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Phone" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại nhà cung cấp"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

