@using Web_BanDienThoai.Models.NhaCungCap;
@model CreateNhaCungCapViewModel

<div class="row">
    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Id_NhaCungCap" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Id_NhaCungCap" class="form-control" />
                    <span asp-validation-for="Id_NhaCungCap" class=" text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Name" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Email" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Address" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Phone" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

