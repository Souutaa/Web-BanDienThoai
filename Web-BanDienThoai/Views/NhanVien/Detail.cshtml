@using Web_BanDienThoai.Models.NhanVien;
@model DetailNhanVienViewModel

<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="NhanVien" asp-action="Index">Danh Sách Nhân Viên</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi Tiết Nhân Viên</li>
            </ol>
        </nav> 
        <div class="wrap d-flex justify-content-start justify-content-sm-start flex-wrap">
            @*<img src="@Url.Content(Model.ImageUrl)" class="rounded-circle shadow-lg" style="width:300px; height:350px" />*@
            <div class="wrap align-items-center ml-5">
                <p class="font-weight-bold text-success" style="font-size:20px">@Model.FullName</p>
                <p class="font-weight-normal"> <b>Mã Nhân Viên:</b> @Model.Id_NhanVien</p>
                <p class="font-weight-normal"> <b>Giới Tính:</b> @Model.Gender</p>              
                <p class="font-weight-normal"> <b>Ngày Sinh:</b> @Model.DOB.ToString("dd/MM/yyyy") </p> 
                <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                <p class="font-weight-normal">Phone: <a href="tel:@Model.Phone">@Model.Phone</a></p>
                <br /><br />
                @*<p class="font-weight-bold"> Pay & Deductions</p>
                <hr style="background-color:crimson" />
                <p class="font-weight-normal"> Payment Method: @Model.PaymentMethod</p>
                <p class="font-weight-normal"> Student Loan: @Model.StudentLoan</p>
                <p class="font-weight-normal"> Union Member: @Model.UnionMember</p>
                <p class="font-weight-normal"><i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i> <a href="mailto:@Model.Email?subject=Payslip&body=Attached within is your paylip.">Send Payslip</a></p>
                <br /><br />*@

                <p class="font-weight-bold"> Address</p>
                @*<hr style="background-color:crimson" />*@
                <p class="font-weight-normal"> @Model.Address</p>
               @* <p class="font-weight-normal"> @Model.City</p>
                <p class="font-weight-normal"> @Model.Postcode</p>*@
                <br />
                <br />
                <div class="form-group">                
                <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                <br />
                <br />
                <br />
            </div>
            </div>
        </div>
    </div>
</div>