@using Web_BanDienThoai.Models.NhapHang;
@model DetailNhapHangViewModel

<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="NhapHang" asp-action="Index">Danh Sách Nhập Hàng</a></li>
                <li class="breadcrumb-item active" aria-current="page">Chi Tiết Đơn Nhập Hàng</li>
            </ol>
        </nav>
        <div class="wrap d-flex justify-content-start justify-content-sm-start flex-wrap">            
            <div class="wrap align-items-center ml-5">
                <p class="font-weight-bold text-success" style="font-size:20px">@Model.Id_NhapHang</p>
                <p class="font-weight-normal"> <b>Ngày lập đơn:</b> @Model.NgayLap.ToShortDateString()</p>
                <p class="font-weight-normal"> <b>Ngày giao đơn:</b> @Model.NgayGiao.ToShortDateString()</p>
                <p class="font-weight-normal"> <b>Tổng số lượng nhập:</b> @Model.TongSoLuong </p>
                <p class="font-weight-normal"> <b>Tổng tiền nhập:</b> @Model.TongTien</p>
                <p class="font-weight-normal"> <b>Trạng thái nhập hàng:</b> @Model.TrangThaiNhapHang</p>
                <p class="font-weight-normal"> <b>Ghi Chú:</b> @Model.GhiChu</p>
                <p class="font-weight-normal"> <b>Mã nhân viên:</b> @Model.Id_NhanVien</p>
                <p class="font-weight-normal"> <b>Mã nhà cung cấp:</b> @Model.Id_NhaCungCap</p>
                <br /><br />
                <div class="wrap d-flex justify-content-end flex-wrap">
                    <table class="table table-strip table-dark">
                        <thead>
                            <tr>
                                <th>Mã danh mục con</th>
                                <th>Tên danh mục con</th>
                                <th>Mã cấu hình</th>
                                <th class="text-warning">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.sanphamnhaphang)
                            {
                                <tr>
                                    <td>@item.Id_SanPham</td>
                                    <td>@item.Ten_SanPham</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.GiaTien</td>
                                    <td>@item.LoaiSanPham</td>
                                    @*<td>@item.TenDanhMuc</td>
                                <td>@item.Id_CauHinh</td>
                                <td>
                                <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id_DanhMucCon">
                                <i class="fas fa-edit"></i> Edit
                                </a>
                                <a class="text-success" asp-action="Detail" asp-route-id="@item.Id_DanhMucCon">
                                <i class="fas fa-bars"></i> Detail
                                </a>
                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id_DanhMucCon">
                                <i class="far fa-trash-alt"></i> Delete
                                </a>
                                </td>*@

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="form-group">
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>