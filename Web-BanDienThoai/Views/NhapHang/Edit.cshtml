@using System.Collections;
@using Web.Persistances;
@using Web_BanDienThoai.Controllers;
@using Web.Services.implementation;
@using Web.Services;
@using Web.Entities;
@using Web_BanDienThoai.Models.NhapHang;
@model EditNhapHangViewModel;

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="NhapHang" asp-action="Index">Danh Sách Nhập Hàng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh Sửa Đơn Nhập Hàng</li>
        </ol>
    </nav>

    <form method="post" asp-action="Create" enctype="multipart/form-data">

        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Id_NhapHang" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="Id_NhapHang" class="form-control" />
                    <span asp-validation-for="Id_NhapHang" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="NgayLap" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="NgayLap" class="form-control" />
                    <span asp-validation-for="NgayLap" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="NgayGiao" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="NgayGiao" class="form-control" />
                    <span asp-validation-for="NgayGiao" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>

                <div class="col-2 form-group">
                    <label asp-for="TongTien" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="TongTien" class="form-control" />
                    <span asp-validation-for="TongTien" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="TongSoLuong" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="TongSoLuong" class="form-control" />
                    <span asp-validation-for="TongSoLuong" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="GhiChu" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="col-2 form-group">
                    <label asp-for="Id_NhanVien" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_NhanVien" class="form-control" asp-items="@Model.NhanVien">
                        <option value=""> --Chọn nhân viên-- </option>
                    </select>
                    <span asp-validation-for="Id_NhanVien" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Id_NhaCungCap" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_NhaCungCap" class="form-control" asp-items="@Model.NhanVien">
                        <option value=""> --Chọn nhà cung cấp-- </option>
                    </select>
                    <span asp-validation-for="Id_NhaCungCap" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">

            <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
            <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
            <br />
            <br />
            <br />
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

