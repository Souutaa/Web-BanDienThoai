@{
}

@model IEnumerable<TaiKhoan>

@{
    ViewBag.Title = "All Users";
}

<h1>@ViewBag.Title</h1>

@if(Model.Any())
{
    <a asp-controller="user" asp-action="register" class="btn btn-primary mb-3">Create User</a>

    foreach(var user in Model)
    {
         <div class="card mb-3">
            <div class="card-header">
                @user.Id
            </div>    
            <div class="card-body">
                @user.UserName
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
} else {
    <div class="card">
      <div class="card-header">
        No users to display
      </div>    
      <div class="card-body">
        <h5 class="card-title">Use the button below to create role!</h5>
        <a asp-controller="user" asp-action="register" class="btn btn-primary">Create User</a>
      </div>
    </div>
}