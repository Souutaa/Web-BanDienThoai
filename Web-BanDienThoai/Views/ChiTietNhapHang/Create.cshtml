@using System.Collections;
@using Web.Persistances;
@using Web_BanDienThoai.Controllers;
@using Web.Services.implementation;
@using Web.Services;
@using Web.Entities;
@using Web_BanDienThoai.Models.ChiTietNhapHang;
@model CreateChiTietNhapHangViewModel;

<div class="row">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="NhapHang" asp-action="Index">Danh Sách Nhập Hàng</a></li>
            <li class="breadcrumb-item active" aria-current="page">Thêm Chi Tiết Nhập Hàng</li>
        </ol>
    </nav>
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="col-md-12 table-responsive-md">
            <div class="form-row">
                <div class="col-2 form-group">
                    <label asp-for="Id_NhapHang" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_NhapHang" class="form-control" asp-items="@Model.NhapHang">
                        <option value=""> Chọn Hóa Đơn </option>
                    </select>
                    <span asp-validation-for="Id_NhapHang" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="Id_SanPham" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <select asp-for="Id_SanPham" class="form-control" asp-items="@Model.SanPham">
                        <option value=""> Chọn Sản Phẫm </option>
                    </select>
                    <span asp-validation-for="Id_SanPham" class="text-danger"></span>
                    <div class="text-danger">@ViewBag.error</div>
                    <a class="btn btn-rounded btn-primary " asp-controller="SanPham" asp-action="Create"> <i class="fas fa-plus-square" style="margin-right:0.7em"></i>Thêm Sản Phẩm</a>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="SoLuong" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="DonGia" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="DonGia" class="form-control" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="col-2 form-group"></div>
                <div class="col-2 form-group">
                    <label asp-for="ThanhTien" class="form-label"></label>
                </div>
                <div class="col-3 form-group">
                    <input asp-for="ThanhTien" class="form-control" readonly/>
                    <span asp-validation-for="ThanhTien" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                <button type="button" onclick="quay_lai_trang_truoc()" class="btn btn-rounded btn-success float-right" @*asp-action="index"*@><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</button>
                <br />
                <br />
                <br />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function quay_lai_trang_truoc() {
        history.back();
    }
</script>
